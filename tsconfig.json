{
    "compilerOptions": {
        "target": "es2020",
        "lib": ["DOM", "ES2020"],
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": "./lib",
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "plugins": [],
        "incremental": true
    },
    "exclude": [
        "**/*.spec.ts",
        "*/.spec.ts",
        "tests",
        "lib",
        "spec",
        "node_modules",
        "jest.config.ts"
    ]
}
